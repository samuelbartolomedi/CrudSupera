@page
@model CrudSupera.Pages_Assinaturas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Assinaturas</h1>

<p>
    <a asp-page="Create">Inserir</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assinatura[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assinatura[0].DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assinatura[0].DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assinatura[0].Cliente.Cpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Assinatura) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Cpf)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
